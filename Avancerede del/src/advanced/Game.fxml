<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="vBox" style="-fx-background-color: rgb(80,80,80);" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="advanced.GameController">
   <children>
        <Label fx:id="mineCounter" prefHeight="21.0" prefWidth="189.0" text="MINES LEFT:" textFill="#ebdb00">
           <font>
               <Font name="Segoe UI Black" size="15.0" />
           </font>
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets bottom="7.0" left="10.0" top="10.0" />
         </padding>
        </Label>
       <StackPane fx:id="sPane" VBox.vgrow="ALWAYS" />
      <HBox>
         <children>
                 <Button fx:id="menuButton" mnemonicParsing="false" onMouseClicked="#goBackToMenuButton" prefHeight="0.0" prefWidth="53.0" text="Menu">
               <font>
                  <Font size="13.0" />
               </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="20.0" top="10.0" />
               </HBox.margin>
                 </Button>
            <Region HBox.hgrow="ALWAYS" />
                 <Button fx:id="restartButton" mnemonicParsing="false" onMouseClicked="#handleRestartButton" prefHeight="21.0" prefWidth="79.0" text="Try Again">
                    <font>
                        <Font size="13.0" />
                    </font>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
                 </Button>
         </children>
      </HBox>
   </children>
</VBox>
